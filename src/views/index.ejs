<!DOCTYPE html>
<html lang="es">
  <%- include('partials/head', {title: 'Inicio'}) %>
  <body>
    <%- include('partials/headerNavbar') %>

    <div class="banner"></div>

    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Basado en tu Ãºltima visita</h2>
        </div>


        <% productosVisitados.forEach(element => { %>
        <div class="col-12 col-sm-6 col-lg-3">
          <section class="product-box">
            <a href="/products/detail/<%= element.id %>">
              <figure class="product-box_image">
                <img src="/images/products/<%= element.image ||
                "default-image.png" %> " alt="imagen de producto no encontrada">
              </figure>
              <article class="product-box_data">
                <h2>
                  <%= toThousand(Math.trunc(element.price - (element.price /
                  100* element.discount))) %>
                </h2>

                <% if (element.discount) { %>

                <span><%= +element.discount%> % OFF</span>
                <% } %>

                <p><%= element.name %></p>
                <i class="fas fa-truck"></i>
              </article>
            </a>
          </section>
        </div>
        <% }) %>
      </div>
    </div>


    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Ofertas</h2>
        </div>
        <% productosSale.forEach(element => { %>

        <div class="col-12 col-sm-6 col-lg-3">
          <section class="product-box">
            <a href="/products/detail/<%= element.id %>">
              <figure class="product-box_image">
                <img src="/images/products/<%= element.image ||
                "default-image.png" %> " alt="Imagen del producto no encontrada">
              </figure>
              <article class="product-box_data">
                <h2>
                  <%= toThousand(Math.trunc(element.price - (element.price /
                  100* element.discount))) %>
                </h2>

                <% if (element.discount) { %>
                <span><%= element.discount %> % OFF</span>
                <% } %>

                <p><%= element.name %></p>
                <i class="fas fa-truck"></i>
              </article>
            </a>
          </section>
        </div>
        <% }) %>
      </div>
    </div>


    <%- include('partials/footer') %>
  </body>
</html>
